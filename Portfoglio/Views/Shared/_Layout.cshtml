        <div class="uk-navbar-center-left">
            <div>
                <ul class="uk-navbar-nav">
                    <li class="uk-active">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a href="#">More</a>
                        <div class="uk-navbar-dropdown">
                            <ul class="uk-nav uk-navbar-dropdown-nav">
                                <li>
                                    <a asp-area="" asp-controller="Art" asp-action="Index">Art</a>
                                </li>
                                <li>
                                    <a href="https://tasker.ilya-gorshkov.ru/">Tasker</a>
                                </li>
                                @* <li><a href="#">Item</a></li> *@
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <a class="uk-navbar-item uk-logo" asp-area="" asp-controller="Home" asp-action="Index">Ilya Gorshkov</a>
        <div class="uk-navbar-center-right">
            <div>
                <ul class="uk-navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="About">About me</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</nav>
