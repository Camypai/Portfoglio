@model Portfoglio.Models.Album


<div class="uk-modal-dialog">
    <button class="uk-modal-close-default" type="button" uk-close></button>
    <div class="uk-modal-header">
        <h2 class="uk-modal-title">Add album</h2>
    </div>
    <div class="uk-modal-body" uk-grid>
        @* Form *@
        <div>
            <form id="CreateAlbum" asp-action="CreateAlbum" asp-controller="AdminArt">
                <div class="uk-margin">
                    <input type="text" class="uk-input" asp-for="Name" placeholder="Name"/>
                </div>
    
                <div class="uk-margin">
                    <input type="text" class="uk-input" asp-for="Description" placeholder="Description"/>
                </div>
    
                <div class="uk-margin">
                    <input type="hidden" class="uk-input" asp-for="State" value="true"/>
                </div>
            </form>
        </div>
    </div>
    <div class="uk-modal-footer uk-text-right">
        <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
        <input form="CreateAlbum" class="uk-button uk-button-primary" type="submit" value="Save"/>
    </div>
</div>