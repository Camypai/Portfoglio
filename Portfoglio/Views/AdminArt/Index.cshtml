@{
    ViewBag.Title = "Administration panel";
    Layout = "_ArtLayout";
}

<div uk-grid>
    <div class="uk-margin">
        <ul class="uk-subnav uk-subnav-divider">
            <li>
                <a href="#addAlbumFormModal" uk-toggle>Add album</a>
            </li>
            <li>
                <a asp-controller="AdminArt" asp-action="About">Edit "About me"</a>
            </li>
            <li>
                <a asp-controller="AdminArt" asp-action="Pricelist">Edit "Pricelist"</a>
            </li>
            <li>
                <a href="#">Edit contacts</a>
            </li>
        </ul>
    </div>
    <div>
        @await Component.InvokeAsync("AlbumsList")
    </div>
</div>

@* Modals *@

<div id="addAlbumFormModal" uk-modal>
    @await Html.PartialAsync("_CreateAlbum")
</div>
