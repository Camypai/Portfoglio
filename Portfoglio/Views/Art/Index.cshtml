@model IEnumerable<Album>

@{
    ViewData["Title"] = "Art";
    ViewData["Footer"] = "| Pictures by Ksenia Kallagova";
}

<section class="uk-section uk-section-default uk-padding-remove-vertical" uk-height-viewport="expand:true">
    <div uk-grid>
        <div class="uk-width-1-3@m uk-background-muted uk-flex uk-flex-column">
            <ul class="uk-nav uk-nav-primary uk-nav-center " uk-sticky>
                <li class="uk-active">
                    <a href="#"><span class="uk-margin-small-right" uk-icon="icon: paint-bucket"></span> My works</a>
                </li>
                <li>
                    <a href="#"><span class="uk-margin-small-right" uk-icon="icon: info"></span> About me</a>
                </li>
                <li>
                    <a href="#"><span class="uk-margin-small-right" uk-icon="icon: list"></span> Pricelist</a>
                </li>
                <li class="uk-nav-divider"></li>
                <li>
                    <a href="#"><span class="uk-margin-small-right" uk-icon="icon: receiver"></span> Contact with me</a>
                </li>
            </ul>
        </div>
        <div class="uk-width-expand" uk-grid>

            @if (Model.Any())
            {
                foreach (var album in Model)
                {
                    @await Html.PartialAsync("ShowAlbum", album)
                }
            }
        </div>
    </div>
</section>